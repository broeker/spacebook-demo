{% for item in iconGroups.sidebar %}
        <div class="flex align-center items-center">
        <a href="{{ item.url }}" title="{{ item.name }}" class="no-underline" target="_blank" rel="noopener noreferrer">
        {% if item.emoji %}
        {{ item.emoji }}
        {% else %}
        {{ icons[item.icon] | safe }}  
        {% endif %}
        </a>
        <span class="p-2">
        {% if item.internal %}
        <a class="no-underline text-sidebar-link hover:text-sidebar-link-hover dark:text-sidebar-link-dark dark:hover:text-sidebar-link-dark font-normal" href="{{ item.url }}" rel="noopener noreferrer">{{ item.label }}</a>
        {% else %}
        <a class="no-underline text-sidebar-link hover:text-sidebar-link-hover dark:text-sidebar-link-dark dark:hover:text-sidebar-link-dark font-normal" href="{{ item.url }}" target="_blank" rel="noopener noreferrer">{{ item.label }}</a>
        {% endif %}
        </span>
        </div>
{% endfor %}